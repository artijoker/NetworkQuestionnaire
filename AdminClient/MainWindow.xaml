<Window x:Class="AdminClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="450"
        MinHeight="300"
        MinWidth="190">
    <UniformGrid Rows="2">
        <Button Command="{Binding ShowSurveysCommand}">
            <DockPanel >
                <Image DockPanel.Dock="Right"
                       Margin="20"
                       Source="icon_syrvey.png"/>
                <TextBlock FontSize="30"
                           Padding="42"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Text="Опросы"/>
            </DockPanel>
        </Button>
        <Button Command="{Binding ShowEmployeesCommand}">
            <DockPanel>
                <Image DockPanel.Dock="Left"
                       Margin="20"
                       Source="icon_employee.png"/>
                <TextBlock FontSize="30" 
                           Margin="15 0"
                           VerticalAlignment="Center"
                           Text="Сотрудники"/>
            </DockPanel>
        </Button>
    </UniformGrid>
</Window>
