<Window x:Class="AdminClient.AddEditEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib" 
        xmlns:local="clr-namespace:AdminClient"
        mc:Ignorable="d"
        Title="AddEditEmployeeWindow" Height="600" Width="500"
        FontSize="20">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="MaxLength" Value="50"/>
        </Style>
        <Style TargetType="StackPanel">
            <Setter Property="Margin" Value="3"/>
        </Style>
        <Style x:Key="BaseButtonStyle" TargetType="Button"/>
        <Style TargetType="Button">
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="Button.Padding" Value="12"/>
            <Setter Property="Button.Margin" Value="10 7"/>
            <Setter Property="TextBlock.FontSize" Value="18"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                    <Style.Triggers>
                        <Trigger  Property="IsMouseOver" Value="True">
                            <Setter  Property="CornerRadius" Value="5"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
                
            </Style.Resources>
            
        </Style>
    </Window.Resources>
    <DockPanel>
        <UniformGrid DockPanel.Dock="Bottom"
                     Columns="2">
            <Button Content="Сохранить"
                    Command="{Binding SaveCommand}"/>
            <Button Content="Отмена"
                    Command="{Binding CancelCommand}"/>
        </UniformGrid>
        <Border BorderBrush="Black" 
                BorderThickness="0.5"
                Background="WhiteSmoke"
                Margin="5">
            <UniformGrid Rows="7"
                         Margin="5">
                <StackPanel>
                    <TextBlock Padding="0 2"
                           Text="Фамилия*"/>
                    <TextBox Text="{Binding Surname}"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Padding="0 2"
                           Text="Имя*"/>
                    <TextBox Text="{Binding Name}"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Padding="0 2"
                           Text="Отчество"/>
                    <TextBox Text="{Binding Patronymic}"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Padding="0 2"
                           Text="Дата рождения*"/>
                    <DatePicker IsTodayHighlighted="True"
                            DisplayDateEnd="{x:Static sys:DateTime.Now}"
                            SelectedDate="{Binding BirthDate}"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Padding="0 2"
                           Text="Email*"/>
                    <TextBox Text="{Binding Email}"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Padding="0 2"
                           Text="Логин*"/>
                    <TextBox Text="{Binding Login}"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Padding="0 2"
                           Text="Пароль*"/>
                    <DockPanel>
                        <Button Style="{StaticResource BaseButtonStyle}" 
                            Background="LightBlue"
                            DockPanel.Dock="Right"
                            FontSize="17"
                            Content="Создать"
                            Padding="8 0"
                            Command="{Binding CreatePasswordCommand}"/>
                        <TextBox Text="{Binding Password}"/>
                    </DockPanel>
                </StackPanel>
            </UniformGrid>
        </Border>
        
        
    </DockPanel>
</Window>
